@page
@model IndexModel
@{
    ViewData["Title"] = "Community Internet";
}

<!-- HERO -->
<header id="home" class="section bg-white border-bottom" style="padding-top: 32px;">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold">Community‑owned internet for Las Vegas</h1>
                <p class="lead">No contracts. No monthly fees. Built by neighbors. Governed by the Network Commons License.</p>
                <div class="d-flex flex-wrap gap-2">
                    <a href="#join" class="btn btn-dark btn-lg">Get connected</a>
                    <a href="https://newsletter.vonet.org/?id=1&p=subscribe" class="btn btn-outline-dark btn-lg" target="_blank" rel="noreferrer">Get updates</a>
                    <a href="https://wiki.vonet.org/" class="btn btn-outline-secondary btn-lg" target="_blank" rel="noreferrer">Read the Wiki</a>
                </div>
                <div class="row text-center text-lg-start mt-4 g-3">
                    <div class="col-4"><div class="p-3 bg-light border rounded-4"><div class="small text-muted">Monthly fees</div><div class="h4 m-0">$0</div></div></div>
                    <div class="col-4"><div class="p-3 bg-light border rounded-4"><div class="small text-muted">Contracts</div><div class="h4 m-0">None</div></div></div>
                    <div class="col-4"><div class="p-3 bg-light border rounded-4"><div class="small text-muted">Model</div><div class="h4 m-0">Donation‑based</div></div></div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="p-4 bg-light border rounded-4 h-100">
