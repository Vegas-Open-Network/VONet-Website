    <script>
        // Initialize AOS (Animate on Scroll)
        AOS.init({
            duration: 800,
            once: true,
        });

        // Exit Intent Popup Logic with 7-day dismissal
        let exitIntentShown = false;
        let mouseLeaveTimer;
        const DISMISSAL_DURATION_MS = 7 * 24 * 60 * 60 * 1000; // 7 days in milliseconds

        function isPopupDismissed() {
            const dismissedUntil = localStorage.getItem('vonet_exit_intent_dismissed_until');
            if (!dismissedUntil) return false;
            
            const dismissedUntilDate = new Date(parseInt(dismissedUntil));
            return new Date() < dismissedUntilDate;
        }

        function shouldShowPopup() {
            // Don't show if already shown in this session
            if (exitIntentShown) return false;
            
            // Don't show if dismissed within the last 7 days
            if (isPopupDismissed()) return false;
            
            // Don't show if user is on donate page
            if (window.location.pathname === '/donate') return false;
            
            return true;
        }

        function showExitIntentPopup() {
            if (shouldShowPopup()) {
                document.getElementById('exitIntentOverlay').style.display = 'block';
                exitIntentShown = true;
                
                // Track analytics if Umami is available
                if (typeof umami !== 'undefined') {
                    umami.track('exit-intent-popup-shown');
                }
            }
        }

        function closeExitIntentPopup() {
            document.getElementById('exitIntentOverlay').style.display = 'none';
            
            // Track analytics if Umami is available
            if (typeof umami !== 'undefined') {
                umami.track('exit-intent-popup-closed');
            }
        }

        function dismissExitIntentPopup() {
            document.getElementById('exitIntentOverlay').style.display = 'none';
            
            // Set dismissal timestamp for 7 days from now
            const dismissedUntil = new Date().getTime() + DISMISSAL_DURATION_MS;
            localStorage.setItem('vonet_exit_intent_dismissed_until', dismissedUntil.toString());
            
            // Track analytics if Umami is available
            if (typeof umami !== 'undefined') {
                umami.track('exit-intent-popup-dismissed-7days');
            }
        }

        // Mouse leave detection for exit intent
        document.addEventListener('mouseleave', function(e) {
            // Only trigger if mouse leaves through the top of the viewport
            if (e.clientY <= 0) {
                clearTimeout(mouseLeaveTimer);
                mouseLeaveTimer = setTimeout(showExitIntentPopup, 500);
            }
        });

        // Close popup when clicking outside
        document.getElementById('exitIntentOverlay').addEventListener('click', function(e) {
            if (e.target === this) {
                closeExitIntentPopup();
            }
        });

        // Close popup with ESC key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeExitIntentPopup();
            }
        });

        // Alternative: Show popup before page unload (less intrusive)
        window.addEventListener('beforeunload', function(e) {
            if (shouldShowPopup()) {
                // This will show a browser's default confirmation dialog
                e.preventDefault();
                e.returnValue = 'Help keep Vegas connected! Consider supporting VONet before you leave.';
                return e.returnValue;
            }
        });

        // Optional: Time-based trigger (show after 30 seconds if user hasn't left)
        setTimeout(function() {
            if (shouldShowPopup() && document.visibilityState === 'visible') {
                // Only show if user is actively viewing the page
                const timeSpent = performance.now();
                if (timeSpent > 30000) { // 30 seconds
                    showExitIntentPopup();
                }
            }
        }, 30000);
    </script>

